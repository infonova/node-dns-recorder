# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending _every_ file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8


[*.py]
indent_size = 4
max_line_length = 120

[*.json]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.tf]
max_line_length = 120
